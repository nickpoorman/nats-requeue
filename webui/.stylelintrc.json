{
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-css-modules",
        "stylelint-config-prettier"
    ],
    "rules": {
        "no-descending-specificity": null,
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": [
                    "global",
                    "horizontal",
                    "vertical"
                ]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ]
    },
    "ignoreFiles": [
        "**/*.js"
    ]
}